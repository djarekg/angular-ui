{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "launch api",
      "cwd": "${workspaceFolder}/apps/api",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "skipFiles": [
        "**/<node_internals>/**"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "pnpm run start",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/apps/demo",
      "cwd": "${workspaceFolder}/apps/demo"
    },
    {
      "name": "ng serve (no hmr)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "pnpm run start (no hmr)",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/apps/demo",
      "cwd": "${workspaceFolder}/apps/demo"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "pnpm run test",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}/apps/demo",
      "cwd": "${workspaceFolder}/apps/demo"
    }
  ],
  "compounds": [
    {
      "name": "debug app",
      "configurations": [
        "launch api",
        "ng serve",
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    },
    {
      "name": "debug app (no hmr)",
      "configurations": [
        "launch api",
        "ng serve (no hmr)",
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
}
